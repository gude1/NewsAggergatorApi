    "components": {
        "schemas": {
            "LoginUserRequest": {
                "title": "LoginUserRequest",
                "description": "Login User Request body",
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "description": "User's email",
                        "type": "string",
                        "format": "email",
                        "example": "john@example.com"
                    },
                    "password": {
                        "description": "User's password",
                        "type": "string",
                        "example": "secretpassword"
                    }
                },
                "type": "object"
            },
            "StoreUserPreferenceRequest": {
                "title": "StoreUserPreferenceRequest",
                "description": "Store User Preference Request body",
                "properties": {
                    "category": {
                        "description": "User's preferred category",
                        "type": "string",
                        "example": "sports"
                    },
                    "author": {
                        "description": "User's preferred author",
                        "type": "string",
                        "example": "John Doe"
                    },
                    "source": {
                        "description": "User's preferred source",
                        "type": "string",
                        "example": "example.com"
                    }
                },
                "type": "object"
            },
            "StoreUserRequest": {
                "title": "StoreUserRequest",
                "description": "Store User Request body",
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "properties": {
                    "name": {
                        "description": "User's name",
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "description": "User's email",
                        "type": "string",
                        "format": "email",
                        "example": "john@example.com"
                    },
                    "password": {
                        "description": "User's password",
                        "type": "string",
                        "example": "secretpassword"
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "User",
                "description": "User model",
                "xml": {
                    "name": "User"
                }
            },
            "UserPreference": {
                "title": "UserPreference",
                "description": "UserPreference model",
                "xml": {
                    "name": "UserPreference"
                }
            }
