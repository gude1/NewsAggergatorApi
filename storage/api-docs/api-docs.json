                    {
                        "name": "source",
                        "in": "query",
                        "description": "Source to search",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "date",
                        "in": "query",
                        "description": "Date to filter by",
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Category to filter by",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "title": {
                                                        "type": "string",
                                                        "example": "Article title"
                                                    },
                                                    "source": {
                                                        "type": "string",
                                                        "example": "News source"
                                                    },
                                                    "category": {
                                                        "type": "string",
                                                        "example": "Article category"
                                                    },
                                                    "desc": {
                                                        "type": "string",
                                                        "example": "Article description"
                                                    },
                                                    "url": {
                                                        "type": "string",
                                                        "example": "https://example.com/article"
                                                    },
                                                    "image": {
                                                        "type": "string",
                                                        "example": "https://example.com/article/image.jpg"
                                                    },
                                                    "date": {
                                                        "type": "string",
                                                        "example": "2023-06-27"
                                                    }
